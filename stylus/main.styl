// main.styl

// IMPORTS
@import "reset"

// VARIABLES
main-color = red

h1
  color main-color

// MIXINS
button-base()
  border solid 1px black
  padding 8px
  text-decoration none

.button
  button-base()
  background-color black
  color white

.button-outline
  button-base()
  color black

// NESTING
.navbar
  display flex
  justify-content space-between
  line-height 1.5
  padding-block .625rem
  padding-inline .25rem
  align-items center

  a
    color #555
    text-decoration none
    padding 1rem

  a:hover
    color #000


  a:first-child
    color #000
    margin-right auto
    font-weight bold
    padding-left .5rem

  a:last-child
    padding-right .5rem


  .button
    border 0
    padding .5rem
    margin-right .5rem


